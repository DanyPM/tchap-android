<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_tchap_register_wait_for_email"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="@string/tchap_register_title" />

    <TextView
        android:id="@+id/fragment_tchap_register_wait_for_email_title"
        style="@style/Widget.Vector.TextView.HeadlineMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:text="@string/tchap_register_wait_for_email_title"
        android:textColor="?colorPrimaryVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/fragment_tchap_register_wait_for_email_email"
        style="@style/Widget.Vector.TextView.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_tchap_register_wait_for_email_title"
        tools:text="jerome.martin@test.gouv.fr" />

    <TextView
        android:id="@+id/fragment_tchap_register_wait_for_email_subtitle"
        style="@style/Widget.Vector.TextView.HeadlineMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:text="@string/tchap_register_wait_for_email_subtitle"
        android:textColor="?colorPrimaryVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_tchap_register_wait_for_email_email" />

    <Button
        android:id="@+id/fragment_tchap_register_wait_for_email_login_button"
        style="@style/Widget.Vector.Button.Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:text="@string/tchap_register_wait_for_email_login_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_tchap_register_wait_for_email_subtitle" />

    <TextView
        android:id="@+id/fragment_tchap_register_wait_for_email_back"
        style="@style/Widget.Vector.Button.Text.Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:padding="8dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:text="@string/tchap_register_wait_for_email_no_email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>